<div class="container py-3">
  <% if params[:search] %>
    <%= render 'pages/search_results', kits: @kits, restaurants: @restaurants, no_results: @no_results %>
  <% else %>
    <div>
      <h1>Our Kits</h1>
      <div class="card__layout">
        <% @kits.each do |kit| %>
          <%= render 'kits/kitcard', kit: kit %>
        <% end %>
      </div>
    </div>
    <div>
      <h1>Our Restaurants</h1>
      <div class="card__layout">
        <% @restaurants.each do |restaurant| %>
          <%= render 'restaurants/restaurantcard', restaurant: restaurant %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
